echo ' __    __    __  __          _____     ______     ______   ______   __     __         ______     ______    '
echo '/\ "-./  \  /\ \_\ \        /\  __-.  /\  __ \   /\__  _\ /\  ___\ /\ \   /\ \       /\  ___\   /\  ___\   '
echo '\ \ \-./\ \ \ \____ \       \ \ \/\ \ \ \ \/\ \  \/_/\ \/ \ \  __\ \ \ \  \ \ \____  \ \  __\   \ \___  \  '
echo ' \ \_\ \ \_\ \/\_____\       \ \____-  \ \_____\    \ \_\  \ \_\    \ \_\  \ \_____\  \ \_____\  \/\_____\ '
echo '  \/_/  \/_/  \/_____/        \/____/   \/_____/     \/_/   \/_/     \/_/   \/_____/   \/_____/   \/_____/ '
echo '                                                                                                            '

# .gitconfig
if [ -f ".gitconfig" ]; then
	echo "==> Updating .gitconfig... OK"
	cp .gitconfig ~/.gitconfig
fi

# homebrew
if which brew &> /dev/null; then
	echo "==> Checking homebrew... OK"
else
	echo "==> Installing Homebrew (https://github.com/mxcl/homebrew/wiki/installation)..."
	/usr/bin/ruby -e "$(/usr/bin/curl -fsSL https://raw.github.com/mxcl/homebrew/master/Library/Contributions/install_homebrew.rb)"
	echo "==> OK"
fi

# nodejs
if which node &> /dev/null; then
	echo "==> Checking node... OK"
else
	echo "==> Installing node (git clone git://github.com/ry/node.git)..."
	brew install node
	echo "==> OK"
fi

# npm
if which npm &> /dev/null; then
	echo "==> Checking npm... OK"
else
	echo "==> Installing npm (curl http://npmjs.org/install.sh | sh)..."
	curl https://npmjs.org/install.sh -k | sh
	echo "==> OK"
fi

# docpad
if which docpad &> /dev/null; then
	echo "==> Checking docpad... OK"
else
	echo "==> Installing docpad (sudo npm install -fg docpad@6.20 | sh)..."
	sudo npm install -fg docpad@6.20
	echo "==> OK"
fi

# jshint
if which jshint &> /dev/null; then
	echo "==> Checking jshint... OK"
else
	echo "==> Installing jshint (sudo npm install jshint -g)..."
	sudo npm install jshint -g
	echo "==> OK"
fi

# csslint
if which csslint &> /dev/null; then
	echo "==> Checking csslint... OK"
else
	echo "==> Installing csslint (sudo npm install -g csslint)..."
	sudo npm install -g csslint
	echo "==> OK"
fi

# update gems
if which gem &> /dev/null; then
	echo "==> Checking gem... OK"
	sudo gem update --system
	echo "==> Updating gem... OK"
fi

# .profile
if [ -f ".profile" ]; then
	echo "==> Updating .profile... OK"
	cp .profile ~/.profile
	echo "==> Now type: source ~/.profile"
fi
